{
  "name": "Amazon Clink",
  "version": "1.0",
  "description": "An Amazon link cleaner.",
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": ["webRequest", "webRequestBlocking", "*://*.amazon.com/*"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "asset/glass_16.png",
    "32": "asset/glass_32.png",
    "48": "asset/glass_48.png",
    "64": "asset/glass_64.png",
    "128": "asset/glass_128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
